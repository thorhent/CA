<?xml version="1.0" encoding="UTF-8"?>
<interface domain="clinicalayudante">
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="ClinicalayudanteWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="AdwToolbarView">
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkBox">
                <property name="margin-bottom">40</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="margin-start">20</property>
                    <property name="vexpand">True</property>
                    <property name="vexpand-set">True</property>
                    <child>
                      <object class="AdwExpanderRow" id="adwExpandSintomas">
                        <property name="width-request">280</property>
                        <property name="expanded">true</property>
                        <property name="icon-name">view-sort-descending-symbolic</property>
                        <property name="margin-bottom">10</property>
                        <property name="margin-end">5</property>
                        <property name="margin-start">5</property>
                        <property name="margin-top">10</property>
                        <property name="subtitle" translatable="yes">Síntomas y signos</property>
                        <property name="title" translatable="yes">Lista</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="margin-end">0</property>
                    <property name="margin-start">0</property>
                    <property name="margin-top">15</property>
                    <child>
                      <object class="GtkButton" id="butInvestigar">
                        <property name="label" translatable="yes">Investigar</property>
                        <property name="width-request">250</property>
                        <property name="margin-end">75</property>
                        <property name="margin-start">50</property>
                        <property name="margin-top">5</property>
                        <property name="tooltip-text" translatable="yes">Investigar las enfermedades posibles según los síntomas o signos</property>
                        <signal name="clicked" handler="butInvestigar_clicked"/>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="GtkBox">
                    <property name="margin-end">60</property>
                    <property name="margin-start">50</property>
                    <property name="margin-top">15</property>
                    <child>
                      <object class="GtkButton" id="butRemSintomas">
                        <property name="icon-name">user-trash-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Remover último síntoma o signo</property>
                        <signal name="clicked" handler="butRemSintomas_clicked"/>
                        <style>
                          <class name="destructive-action"/>
                          <class name="circular"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="butLimpiar">
                        <property name="label" translatable="yes">Limpiar todo</property>
                        <property name="margin-start">10</property>
                        <property name="tooltip-text" translatable="yes">Limpiar todos los síntomas/signos</property>
                        <signal name="clicked" handler="butLimpiar_clicked"/>
                        <style>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel" id="labelPosiblesEnfermedades">
                    <property name="hexpand">True</property>
                    <property name="label" translatable="yes">Posibles enfermedades</property>
                    <property name="margin-top">20</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hexpand">true</property>
                    <property name="margin-end">5</property>
                    <child>
                      <object class="GtkListBox" id="enfermedadesListBox">
                        <property name="hexpand">true</property>
                        <property name="margin-bottom">30</property>
                        <property name="margin-end">30</property>
                        <property name="margin-start">30</property>
                        <property name="margin-top">10</property>
                        <property name="show-separators">True</property>
                        <property name="vexpand">True</property>
                        <style>
                          <class name="card"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child type="bottom">
          <object class="AdwToastOverlay" id="tov"/>
        </child>
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <child type="start">
              <object class="GtkEntry" id="entrySintomas">
                <property name="hexpand">true</property>
                <property name="hexpand-set">true</property>
                <property name="width-request">300</property>
                <property name="placeholder-text" translatable="yes">Síntoma o signo</property>
                <property name="primary-icon-name">document-edit-symbolic</property>
                <property name="tooltip-markup" translatable="yes">Síntoma o signo</property>
                <property name="tooltip-text" translatable="yes" context="Síntoma ou signo">Síntoma o signo</property>
                <signal name="activate" handler="entrySintomas_enter"/>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton" id="butAddSintomas">
                <property name="icon-name">list-add-symbolic</property>
                <property name="tooltip-text" translatable="yes">Agregar síntoma o signo en la lista abajo</property>
                <signal name="clicked" handler="butAddSintomas_clicked"/>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="active">True</property>
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
                <property name="primary">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">610</property>
    <property name="default-width">1080</property>
    <property name="title">Clinical Ayudante</property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">app.preferences</attribute>
        <attribute name="label" translatable="yes">Preferences</attribute>
      </item>
      <item>
        <attribute name="action">win.show-help-overlay</attribute>
        <attribute name="label" translatable="yes">Keyboard Shortcuts</attribute>
      </item>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">About Clinical Ayudante</attribute>
      </item>
    </section>
  </menu>
</interface>
